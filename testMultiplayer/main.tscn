func _on_host_pressed():
	cleanup.emit()
	var peer := ENetMultiplayerPeer.new()
	var a = peer.create_server(netPort)

	get_tree().get_multiplayer().multiplayer_peer = peer
	msg.emit(\"hosting!\")
	
	%state.text = \"HOSTING\"
	gameStart.emit()

func _on_join_pressed():
	cleanup.emit()
	
	var peer := ENetMultiplayerPeer.new()
	var a = peer.create_client(\"localhost\",netPort)
	get_tree().get_multiplayer().multiplayer_peer = peer
	msg.emit(\"joining!\")
	
	%state.text = \"JOINING!\"
	

func _on_quit_pressed():
	cleanup.emit()
	%state.text = \"QUITED!\"
